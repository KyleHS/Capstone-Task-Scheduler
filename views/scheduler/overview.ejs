<% layout('layouts/boilerplate') %>
<h1>Current Tasks</h1>

<ul>
    <% for (let task of tasks){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= task.taskname %></h5>
                        <p class="card-text"><%= task.taskdescription %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= task.time %></small>
                        </p>
                        <a class="btn btn-primary" href="/tasks/<%=task._id%>/edit">Edit <%= task.taskname  %></a>
                        <form action="/tasks/<%=task._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger" onclick="confirmDelete('<%=task._id %>')">Delete Task</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }%>
</ul>

<script>
    function confirmDelete(taskId) {
        if (!confirm("Are you sure you want to delete this task?")) {
            // If user cancels, prevent default action
            event.preventDefault();
        } else {
            // If user confirms, submit the form with DELETE method
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '/tasks/' + taskId + '?_method=DELETE';
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
